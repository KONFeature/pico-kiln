{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Kiln",
  "version": "0.1.0",
  "identifier": "com.nivelais.kiln",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "bun dev",
    "beforeBuildCommand": "bun run build"
  },
  "app": {
    "windows": [
      {
        "title": "Kiln",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "Nivelais",
    "copyright": "Copyright Â© 2025 Nivelais",
    "category": "Utility",
    "shortDescription": "Kiln temperature control and monitoring application",
    "longDescription": "A comprehensive kiln temperature control and monitoring application for managing ceramic firing processes with precision.",
    "android": {
      "minSdkVersion": 24
    },
    "iOS": {
      "minimumSystemVersion": "14.0"
    },
    "macOS": {
      "minimumSystemVersion": "10.13",
      "hardenedRuntime": true
    },
    "windows": {
      "webviewInstallMode": {
        "type": "downloadBootstrapper",
        "silent": true
      },
      "allowDowngrades": false,
      "nsis": {
        "installMode": "currentUser",
        "languages": ["en-US"],
        "displayLanguageSelector": false
      }
    },
    "linux": {
      "deb": {
        "depends": []
      },
      "appimage": {
        "bundleMediaFramework": false
      }
    }
  }
}
